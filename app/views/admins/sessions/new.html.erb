<div id='login-form'>
  <h1><%= '管理者ログイン' %></h1>
  <%= form_with model: @admin, url: :new_admin_session, local: true do |f| %>
    <%- if flash.alert -%>
      <%= content_tag :div, flash.alert, class: 'login_alert' %>
    <%- end -%>
    <div>
      <%= f.label :email, 'メールアドレス' %>
      <%= f.email_field :email, autocomplete: 'email' %>
    </div>
    <div>
      <%= f.label :password, 'パスワード' %>
      <%= f.password_field :password,  autocomplete: 'current-password' %>
    </div>
    <div class='login_button'>
      <%= f.submit 'ログイン' %>
    </div>
  <% end %>
</div>
